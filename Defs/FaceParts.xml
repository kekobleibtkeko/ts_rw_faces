<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- BASE PARTS -->

	<TS_Faces.Data.FacePartDef Name="TSFacePartBase" Abstract="True">
		<drawSize>(0.3, 0.3)</drawSize>
		<shader>TSSkin</shader>
		<slot>None</slot> <!-- Needs to be overridden -->
	</TS_Faces.Data.FacePartDef>
	
	<TS_Faces.Data.FacePartDef Name="TSHighlightBase" ParentName="TSFacePartBase" Abstract="True">
		<slot>Highlight</slot>
		<shader>TSTransparent</shader>
		<noMirror>true</noMirror>
		<stateProps>
			<li Class="TS_Faces.Data.FacePartStateProps">
				<state>Dead</state>
				<hide>true</hide>
				<priority>-100</priority>
			</li>
		</stateProps>
	</TS_Faces.Data.FacePartDef>
	
	<TS_Faces.Data.FacePartDef Name="TSIrisBase" ParentName="TSFacePartBase" Abstract="True">
		<slot>Iris</slot>
		<color>Eye</color>
	</TS_Faces.Data.FacePartDef>
	
	<TS_Faces.Data.FacePartDef Name="TSEyeBase" ParentName="TSFacePartBase" Abstract="True">
		<slot>Eye</slot>
		<!-- Red: Sclera, Blue: Skin, Green: Hair -->
		<shader>TSEye</shader>
		<color>None</color>
		<drawSize>(0.29, 0.29)</drawSize>
		<stateProps>
			<li Class="TS_Faces.Data.FacePartHealthProps">
				<health>Missing</health>
				<path>Things/Pawn/Face/EyeBroken1</path>
				<priority>-100</priority>
			</li>
		</stateProps>
	</TS_Faces.Data.FacePartDef>
	
